@model dynamic
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="text-center mb-4">Recuperar Contraseña</h2>

                <form asp-controller="Cuenta" asp-action="ForgotPassword" method="post">
                    <div class="form-group mb-3">
                        <label for="dni">DNI</label>
                        <input name="dni" id="dni" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Recuperar</button>

                    <div class="mt-3 text-center">
                        <a asp-controller="Cuenta" asp-action="Login">Volver al inicio de sesión</a>
                    </div>
                </form>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-success mt-3">@ViewBag.Mensaje</div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
