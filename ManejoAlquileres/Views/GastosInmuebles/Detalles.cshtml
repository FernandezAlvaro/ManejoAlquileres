@model ManejoAlquileres.Models.GastoInmueble

@{
    ViewData["Title"] = "Detalles del Gasto";
}

<h2>Detalles del Gasto</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Tipo de Gasto</dt>
            <dd class="col-sm-8">@Model.Tipo_gasto</dd>

            <dt class="col-sm-4">Monto</dt>
            <dd class="col-sm-8">@Model.Monto_gasto €</dd>

            <dt class="col-sm-4">Fecha de Pago</dt>
            <dd class="col-sm-8">@Model.Fecha_pago.ToShortDateString()</dd>

            <dt class="col-sm-4">¿Repercutible?</dt>
            <dd class="col-sm-8">@((Model.Repercutible) ? "Sí" : "No")</dd>

            <dt class="col-sm-4">Propiedad</dt>
            <dd class="col-sm-8">@Model.Propiedad?.Referencia_catastral</dd>
        </dl>
        <a asp-action="Index" asp-route-propiedadId="@Model.Id_propiedad" class="btn btn-secondary">Volver</a>
        <a asp-action="Editar" asp-route-id="@Model.Id_gasto" class="btn btn-warning">Editar</a>
        <form asp-action="Eliminar" asp-route-id="@Model.Id_gasto" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este gasto?');">
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
    </div>
</div>
