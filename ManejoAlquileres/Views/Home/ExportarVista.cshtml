@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Exportar";
    var isAdmin = User.IsInRole("Administrador");
}

<div class="container mt-4">
    <h2 class="mb-4">Exportar Datos</h2>

    <form method="post" target="_blank">
        <div class="mb-3">
            <label for="entidad" class="form-label">Entidad</label>
            <select name="entidad" class="form-control" required>
                <option value="propiedades">Propiedades</option>
                @if (isAdmin)
                {
                    <option value="usuarios">Usuarios</option>
                }
                <option value="gastosinmueble">Gastos Inmueble</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="formato" class="form-label">Formato</label>
            <select name="formato" class="form-control" required>
                <option value="excel">Excel</option>
                <option value="pdf">PDF</option>
            </select>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="desde" class="form-label">Desde</label>
                <input type="date" name="desde" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label for="hasta" class="form-label">Hasta</label>
                <input type="date" name="hasta" class="form-control" />
            </div>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" name="accion" value="filtrado" formaction="@Url.Action("ExportarFiltrado")" class="btn btn-primary">
                Exportar 
            </button>
            @if (isAdmin)
                {
            <button type="submit" name="accion" value="todo" formaction="@Url.Action("ExportarTodo")" class="btn btn-secondary">
                Exportar todo
            </button>
                }
        </div>
    </form>
</div>
