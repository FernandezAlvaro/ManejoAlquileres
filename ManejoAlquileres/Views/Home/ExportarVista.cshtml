@{
    ViewData["Title"] = "Exportar";
}

<h2>Exportar</h2>

<form asp-action="ExportarFiltrado" method="post" target="_blank">
    <div class="form-group">
        <label>Desde:</label>
        <input type="date" name="desde" class="form-control" />
    </div>

    <div class="form-group">
        <label>Hasta:</label>
        <input type="date" name="hasta" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado:</label>
        <select name="estado" class="form-control">
            <option value="">Todos</option>
            <option value="pagado">Pagado</option>
            <option value="pendiente">Pendiente</option>
        </select>
    </div>

    <div class="form-group">
        <label>Tipo:</label>
        <select name="tipo" class="form-control">
            <option value="">Ambos</option>
            <option value="pagar">Debo pagar</option>
            <option value="recibir">Debo recibir</option>
        </select>
    </div>

    <div class="form-group">
        <label>Formato:</label>
        <select name="formato" class="form-control">
            <option value="excel">Excel</option>
            <option value="pdf">PDF</option>
        </select>
    </div>

    <div class="form-group">
        <label>Entidad a exportar:</label>
        <select name="entidad" class="form-control">
            <option value="pagos" selected>Pagos</option>
            <option value="propiedades">Propiedades</option>
            <option value="usuarios">Usuarios</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Exportar</button>
</form>
