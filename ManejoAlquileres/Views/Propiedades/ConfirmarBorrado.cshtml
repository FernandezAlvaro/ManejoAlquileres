@model ManejoAlquileres.Models.Helpers.PropiedadViewModel

@{
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="container my-4">
    <h2 class="mb-4 text-center text-danger">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3 text-danger">¿Estás seguro de que deseas eliminar esta propiedad?</h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-5">Dirección:</dt>
                        <dd class="col-sm-7">@Model.Direccion</dd>

                        <dt class="col-sm-5">Referencia Catastral:</dt>
                        <dd class="col-sm-7">@Model.ReferenciaCatastral</dd>

                        <dt class="col-sm-5">Estado:</dt>
                        <dd class="col-sm-7">@(Model.EstadoPropiedad ? "Disponible" : "No disponible")</dd>

                        <dt class="col-sm-5">Valor de Adquisición:</dt>
                        <dd class="col-sm-7">@Model.ValorAdquisicion.ToString("N2") €</dd>

                        <dt class="col-sm-5">Descripción:</dt>
                        <dd class="col-sm-7">@Model.Descripcion</dd>
                    </dl>
                    @if (User.IsInRole("Administrador") && Model.UsuariosConPorcentaje?.Any() == true)
                    {
                        <hr />
                        <h5 class="text-primary">Usuarios con participación en esta propiedad:</h5>
                        <ul>
                            @foreach (var item in Model.UsuariosConPorcentaje)
                            {
                                <li><strong>@item.NIF + " " + @item.NombreCompleto</strong>: @($"{item.Porcentaje / 100:P}")</li>
                            }
                        </ul>
                    }

                    <form asp-action="Borrar" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
