@model ManejoAlquileres.Models.Helpers.PropiedadAdminViewModel

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<h2 class="text-danger mb-4">¿Estás seguro de que deseas eliminar esta propiedad?</h2>

<dl class="row">
    <dt class="col-sm-4">Dirección</dt>
    <dd class="col-sm-8">@Model.Direccion</dd>

    <dt class="col-sm-4">Referencia Catastral</dt>
    <dd class="col-sm-8">@Model.ReferenciaCatastral</dd>

    <dt class="col-sm-4">Estado</dt>
    <dd class="col-sm-8">@(Model.EstadoPropiedad ? "Disponible" : "No disponible")</dd>

    <dt class="col-sm-4">Valor Adquisición</dt>
    <dd class="col-sm-8">@Model.ValorAdquisicion.ToString("N2") €</dd>

    <dt class="col-sm-4">Descripción</dt>
    <dd class="col-sm-8">@Model.Descripcion</dd>
</dl>

<form asp-action="BorrarAdmin" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="VerTodas" class="btn btn-secondary">Cancelar</a>
</form>
