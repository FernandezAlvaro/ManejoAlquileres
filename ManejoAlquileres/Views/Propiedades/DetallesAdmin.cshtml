@model ManejoAlquileres.Models.Helpers.PropiedadAdminViewModel

@{
    ViewData["Title"] = "Detalles de la Propiedad";
}

<h2 class="mb-4">Detalles de Propiedad</h2>

<dl class="row">
    <dt class="col-sm-4">Dirección</dt>
    <dd class="col-sm-8">@Model.Direccion</dd>

    <dt class="col-sm-4">Referencia Catastral</dt>
    <dd class="col-sm-8">@Model.ReferenciaCatastral</dd>

    <dt class="col-sm-4">Nº Habitaciones</dt>
    <dd class="col-sm-8">@Model.NumHabitaciones</dd>

    <dt class="col-sm-4">Valor Catastral Piso</dt>
    <dd class="col-sm-8">@Model.ValorCatastralPiso.ToString("F2") €</dd>

    <dt class="col-sm-4">Valor Catastral Terreno</dt>
    <dd class="col-sm-8">@Model.ValorCatastralTerreno.ToString("F2") €</dd>

    <dt class="col-sm-4">Fecha Adquisición</dt>
    <dd class="col-sm-8">@Model.FechaAdquisicion.ToShortDateString()</dd>

    <dt class="col-sm-4">Valor Adquisición</dt>
    <dd class="col-sm-8">@Model.ValorAdquisicion.ToString("F2") €</dd>

    <dt class="col-sm-4">Valor Adquisición Total</dt>
    <dd class="col-sm-8">@Model.ValorAdquisicionTotal.ToString("F2") €</dd>

    <dt class="col-sm-4">Estado</dt>
    <dd class="col-sm-8">@(Model.EstadoPropiedad ? "Disponible" : "No disponible")</dd>

    <dt class="col-sm-4">Descripción</dt>
    <dd class="col-sm-8">@Model.Descripcion</dd>

    <dt class="col-sm-4">Usuarios</dt>
    <dd class="col-sm-8">
        <ul>
            @foreach (var u in Model.PorcentajesUsuarios)
            {
                <li><strong>@u.NIF - @u.NombreCompleto:</strong> @($"{u.Porcentaje}%")</li>
            }
        </ul>
    </dd>
</dl>

<a asp-action="EditarAdmin" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="VerTodas" class="btn btn-secondary">Volver</a>