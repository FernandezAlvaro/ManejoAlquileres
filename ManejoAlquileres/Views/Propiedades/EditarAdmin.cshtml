@model ManejoAlquileres.Models.Helpers.PropiedadAdminViewModel

@{
    ViewData["Title"] = "Editar Propiedad";
}

<h2 class="mb-4">Editar Propiedad</h2>

<form asp-action="EditarAdmin" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReferenciaCatastral" class="form-label"></label>
        <input asp-for="ReferenciaCatastral" class="form-control" />
        <span asp-validation-for="ReferenciaCatastral" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumHabitaciones" class="form-label"></label>
        <input asp-for="NumHabitaciones" class="form-control" />
        <span asp-validation-for="NumHabitaciones" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValorCatastralPiso" class="form-label"></label>
        <input asp-for="ValorCatastralPiso" class="form-control" />
        <span asp-validation-for="ValorCatastralPiso" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValorCatastralTerreno" class="form-label"></label>
        <input asp-for="ValorCatastralTerreno" class="form-control" />
        <span asp-validation-for="ValorCatastralTerreno" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaAdquisicion" class="form-label"></label>
        <input asp-for="FechaAdquisicion" class="form-control" type="date" />
        <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValorAdquisicion" class="form-label"></label>
        <input asp-for="ValorAdquisicion" class="form-control" />
        <span asp-validation-for="ValorAdquisicion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValorAdquisicionTotal" class="form-label"></label>
        <input asp-for="ValorAdquisicionTotal" class="form-control" />
        <span asp-validation-for="ValorAdquisicionTotal" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="EstadoPropiedad" class="form-check-input" />
        <label asp-for="EstadoPropiedad" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    @if (Model?.PorcentajesUsuarios != null && Model.PorcentajesUsuarios.Any())
    {
        <h4 class="mt-4">Porcentajes de Propiedad</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>NIF</th>
                    <th>Porcentaje</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.PorcentajesUsuarios.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.PorcentajesUsuarios[i].NombreCompleto
                            <input type="hidden" asp-for="PorcentajesUsuarios[@i].UsuarioId" />
                        </td>
                        <td>@Model.PorcentajesUsuarios[i].NIF</td>
                        <td>
                            <input name="PorcentajesUsuarios[@i].Porcentaje"
                                   class="form-control"
                                   value="@(Model.PorcentajesUsuarios[i].Porcentaje)" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
    <a asp-action="VerTodas" class="btn btn-secondary">Cancelar</a>
</form>
