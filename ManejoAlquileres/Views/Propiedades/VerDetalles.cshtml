@model ManejoAlquileres.Models.Helpers.PropiedadViewModel

@{
    ViewData["Title"] = "Detalles de la Propiedad Alquilada";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles de la Propiedad</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Dirección</dt>
                <dd class="col-sm-8">@Model.Direccion</dd>

                <dt class="col-sm-4">Referencia Catastral</dt>
                <dd class="col-sm-8">@Model.ReferenciaCatastral</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@((Model.EstadoPropiedad) ? "Disponible" : "No disponible")</dd>

                <dt class="col-sm-4">Valor de Adquisición</dt>
                <dd class="col-sm-8">@Model.ValorAdquisicion.ToString("F2") €</dd>

                <dt class="col-sm-4">Valor Catastral del Piso</dt>
                <dd class="col-sm-8">@Model.ValorCatastralPiso.ToString("F2") €</dd>

                <dt class="col-sm-4">Valor Catastral del Terreno</dt>
                <dd class="col-sm-8">@Model.ValorCatastralTerreno.ToString("F2") €</dd>

                <dt class="col-sm-4">Fecha de Adquisición</dt>
                <dd class="col-sm-8">@Model.FechaAdquisicion.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Número de Habitaciones</dt>
                <dd class="col-sm-8">@Model.NumHabitaciones</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>