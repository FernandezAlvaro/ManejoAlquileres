@model ManejoAlquileres.Models.Helpers.PropiedadViewModel
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

<form asp-action="@(string.IsNullOrEmpty(Model?.Id) ? "Crear" : "Editar")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReferenciaCatastral" class="form-label"></label>
        <input asp-for="ReferenciaCatastral" class="form-control" />
        <span asp-validation-for="ReferenciaCatastral" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ValorCatastralPiso" class="form-label"></label>
            <input asp-for="ValorCatastralPiso" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ValorCatastralPiso" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ValorCatastralTerreno" class="form-label"></label>
            <input asp-for="ValorCatastralTerreno" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ValorCatastralTerreno" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="FechaAdquisicion" class="form-label"></label>
        <input asp-for="FechaAdquisicion" class="form-control" type="date" />
        <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ValorAdquisicion" class="form-label"></label>
            <input asp-for="ValorAdquisicion" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ValorAdquisicion" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ValorAdquisicionTotal" class="form-label"></label>
            <input asp-for="ValorAdquisicionTotal" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ValorAdquisicionTotal" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="NumHabitaciones" class="form-label"></label>
            <input asp-for="NumHabitaciones" class="form-control" type="number" min="0" />
            <span asp-validation-for="NumHabitaciones" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PorcentajePropiedad" class="form-label"></label>
            <input name="PorcentajePropiedad"
                   class="form-control"
                   type="number" min="0" max="100" step="0.01"
                   value="@(Model?.PorcentajePropiedad ?? 0)" />
            <span asp-validation-for="PorcentajePropiedad" class="text-danger"></span>
        </div>

    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="EstadoPropiedad" class="form-check-input" />
        <label class="form-check-label" for="EstadoPropiedad">Disponible</label>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}