@model IEnumerable<ManejoAlquileres.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="mt-4">Usuarios</h1>

@if (User.IsInRole("Administrador"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Crear nuevo usuario
        </a>
    </p>
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-@TempData["TipoMensaje"]">
        @TempData["Mensaje"]
    </div>
}

<div class="table-responsive" style="overflow-x:auto;">
    <table class="table table-striped table-bordered align-middle w-100">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.Apellidos)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Contraseña)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.NIF)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Direccion)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Telefono)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Email)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.EsAdministrador)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Informacion_bancaria)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td class="d-none d-sm-table-cell">@item.Apellidos</td>
                    <td class="d-none d-md-table-cell">@item.Contraseña</td>
                    <td class="d-none d-lg-table-cell">@item.NIF</td>
                    <td class="d-none d-lg-table-cell">@item.Direccion</td>
                    <td class="d-none d-md-table-cell">@item.Telefono</td>
                    <td class="d-none d-md-table-cell">@item.Email</td>
                    <td class="d-none d-lg-table-cell">@((item.EsAdministrador) ? "Sí" : "No")</td>
                    <td class="d-none d-lg-table-cell">@item.Informacion_bancaria</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.
" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_usuario" title="Detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_usuario" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
